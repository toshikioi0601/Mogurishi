<% user = User.find(notification.from_user_id) %>
<% divelog = Divelog.find(notification.divelog_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのダイブログが<%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのダイブログに<%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag divelog.picture.url), divelog_path(divelog), class: 'divelog-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to divelog.name, divelog_path(divelog) %></p>
      <p><%= divelog.description %></p>
    </div>
  </div>
</li>