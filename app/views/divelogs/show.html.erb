<% provide(:title, "#{@divelog.name}") %>
<div class="container">
  <div class="row">
    <h2 class="divelog-name"><%= @divelog.name %></h2>
    <div class="change-divelog">
      <% if current_user == @divelog.user %>
        <%= link_to "編集", edit_divelog_path(@divelog), class: 'edit-divelog' %>
      <% end %>
      <% if current_user.admin? || (current_user == @divelog.user) %>
        <%= link_to "削除", divelog_path(@divelog), method: :delete, class: 'delete-divelog',
                                      data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </div>
    <h4><%= @divelog.description %></h4>
    <h4 class="divelog-reference">ダイブログ：<%= link_to "#{@divelog.reference}", @divelog.reference, target: "_blank" %></h4>
    <h4 class="divelog-water_temp">：<%= @divelog.water_temp %> </h4>
    <div class="weather">
      <h5 class="title-weather">天候</h5>
      <h5><%= @divelog.weather %></h5>
    </div>
    <div class="show-divelog-other-info">
      <div class="divelog-info">
        <h5>気温：</h5><h4><%= @divelog.temp %></h4> <h5>°</h5>
      </div>
      <div class="divelog-info">
        <h5>人気度：</h5><h4><%= @divelog.popularity %></h4>
      </div>
    </div>
  </div>
</div>
